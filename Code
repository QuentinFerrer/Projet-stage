import pymysql.cursors
import numpy as np
from datetime import timedelta

def connectcursor():
    conn = pymysql.connect(host='localhost',
                             user='root',
                             port='',
                             password='',
                             database='stage')
    cursor = conn.cursor()
    return cursor
